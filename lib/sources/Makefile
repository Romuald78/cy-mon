
#-----------------------------------------
# REBUILD
#-----------------------------------------
# ALL
all : libGameRGR.a

#-----------------------------------------
# GUI
#-----------------------------------------
gui.o : gui.c game_rgr.h gui.h
	@echo "Regenerating [$@]..."
	@gcc -c $< -o $@
    
#-----------------------------------------
# GAME
#-----------------------------------------
game.o : game.c game_rgr.h game.h  
	@echo "Regenerating [$@]..."
	@gcc -c $< -o $@

#-----------------------------------------
# LIB GAME
#-----------------------------------------
libGameRGR.a : gui.o game.o
	@echo "Regenerating [$@]..."
	@ar rcs $@ $^
	
#-----------------------------------------
# CLEAN
#-----------------------------------------
clean :
	@rm -f *.o *.a *.so

